{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{# ... #}

{% block body %}
    <header class="p-3">
        <img src="{{ asset('build/images/logo.png') }}" class="site-logo" alt="Crypto Tracker Logo">
    </header>
    <hr class="header-border">
    <div class="page-content">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path('app_login') }}" method="post">
            <div class="form-inputs login-form">
                <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Email"/>

                <input type="password" id="password" name="_password" placeholder="Mot de passe"/>
                
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"/> #}
            </div>

            <button class="form-submit" type="submit">Se connecter</button>
        </form>
        <div class="auth-nav-link">
            <a href="{{ path('app_register') }}">Cr√©er un compte</a>
        </div>
    </div>

{% endblock %}